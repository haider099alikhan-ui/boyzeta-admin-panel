{
  "name": "boyzeta-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for boycott database with Node.js, Express, and MongoDB",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend",
    "vercel-build": "npm run build:frontend",
    "test": "jest",
    "test:setup": "node scripts/test-setup.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "setup:admin": "node scripts/create-super-admin.js",
    "migrate": "node scripts/migrate-existing-companies.js"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "boycott",
    "api",
    "rest"
  ],
  "author": "BoyZeta Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "vercel": "^46.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
